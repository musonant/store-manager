{
  "name": "store-manager",
  "version": "1.0.0",
  "description": "Store Manager is a web application that helps store owners manage sales and product inventory records. This application is meant for use in a single store",
  "scripts": {
    "start": "npm run migrate:staging && babel-node ./bin/www",
    "start:dev": "set DEBUG=database&& npm run migrate && nodemon --exec babel-node ./bin/www",
    "test": "cross-env NODE_ENV=staging&&npm run migrate && nyc mocha --timeout 500000 --exit server/specs/",
    "test:dev": "set NODE_ENV=test&&npm run migrate && nyc mocha --timeout 500000 --exit server/specs/",
    "migrate": "babel-node server/database/dbsetup.js",
    "migrate:staging": "babel-node server/database/dbsetup.js",
    "build": "cross-env NODE_ENV=production&&  ",
    "lint": "eslint --fix server",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": "8.11.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/musonant/store-manager.git"
  },
  "author": "Emmanuel Osuh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/musonant/store-manager/issues"
  },
  "links": {
    "homepage": "https://github.com/musonant/store-manager#readme",
    "apiServer": "https://musonant-store-manager.herokuapp.com/api/v1",
    "pivotalTrackerProject": "https://www.pivotaltracker.com/projects/2203434/"
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "babel-register": "6.26.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "chai": "4.2.0",
    "cloudinary": "1.11.0",
    "connect-multiparty": "2.2.0",
    "cors": "2.8.4",
    "debug": "4.1.0",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "jsonwebtoken": "8.3.0",
    "mocha": "5.2.0",
    "node-cron": "2.0.3",
    "nodemailer": "4.6.8",
    "pg": "7.6.0",
    "supertest": "3.3.0",
    "validator": "10.8.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-istanbul": "5.1.0",
    "babel-preset-env": "1.7.0",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "eslint": "5.8.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "nodemon": "1.18.5",
    "nyc": "13.1.0"
  }
}
