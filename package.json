{
  "name": "store-manager",
  "version": "1.0.0",
  "description": "Store Manager is a web application that helps store owners manage sales and product inventory records. This application is meant for use in a single store",
  "scripts": {
    "start": "babel-node ./bin/www",
    "start:dev": "nodemon --exec babel-node ./bin/www",
    "test": "set NODE_ENV=test&& nyc --reporter=lcov --reporter=html --reporter=text mocha --timeout 500000 --exit --compilers js:babel-core/register  server/specs/",
    "build": "cross-env NODE_ENV=production",
    "lint": "eslint --fix server",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": "8.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/musonant/store-manager.git"
  },
  "author": "Emmanuel Osuh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/musonant/store-manager/issues"
  },
  "homepage": "https://github.com/musonant/store-manager#readme",
  "apiServer": "https://musonant-store-manager.herokuapp.com/api/v1",
  "dependencies": {
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "cloudinary": "^1.11.0",
    "connect-multiparty": "^2.1.1",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "node-cron": "^1.2.1",
    "nodemailer": "^4.6.8",
    "pg": "^7.4.3",
    "supertest": "^3.1.0",
    "validator": "^10.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2"
  }
}
